<?xml version="1.0" encoding="UTF-8"?>
<!--
skillType => see SkillType.java
weaponLimit => separate by "," (see WeaponType.java).
loop => 0:dontLoop; 1:loop;
-->


<root
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://luoying.huliqing.name'
    xsi:schemaLocation='http://luoying.huliqing.name meta/magic.xsd'>
    
    <!--=====================================================================-->
    <!--魔法：获得疾风步效果-->
    <!--=====================================================================-->
    <magicState id="magicStateWindWalk" useTime="2" effects="effectStateWindWalkStart" 
               states="stateWindWalk|0.4" tracePosition="always" traceRotation="always" />
    
    <!--=====================================================================-->
    <!--魔法：复活术-->
    <!--=====================================================================-->
    <magicState id="magicReborn" useTime="5" effects="effectReborn" sounds="soundResurrect" 
           states="stateRebornEssential,stateRebornAddLife|1,stateRebornProtect|1,stateRebornWait|1" 
           actorAnims="actorAnimMoveUp|0.2" tracePosition="once" />
    
    <!--=====================================================================-->
    <!--二刀流波动冲击：附加的魔法状态,剑气伤人-->
    <!--=====================================================================-->
    <magicAttributeHit id="magicWaveHit" useTime="2" tracePosition="once" traceRotation="no" 
                       hitChecker="hitCheckerFightDefault" attributes="attributeHealth|-10" interval="0.2" distance="4.5" />
</root>
