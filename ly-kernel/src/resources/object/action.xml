<?xml version="1.0" encoding="UTF-8"?>

<root
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://luoying.huliqing.name'
    xsi:schemaLocation='http://luoying.huliqing.name meta/action.xsd'>
    <!--==========================================================================-->
    <!-- 基本配置 -->
    <!--==========================================================================-->
    
    <!--战斗行为基本配置-->
    <actionFightDynamic id="actionFightBase" allowFollow="1" autoFacing="1" fightSkillTags="fight,attack" attackIntervalAttribute="attributeGhostRate" />
    
    <!--==========================================================================-->
    <!-- Action配置 -->
    <!--==========================================================================-->
    
    
    <!--主角类型的战斗行为,限制在AI战斗行为中只能使用普通近战和远程射击 -->
    <actionFightDynamic id="actionPlayerFight" extends="actionFightBase" autoTakeOffWeapon="0" />
    
    <!--普通动态角色的战斗行为，会跟随，会转向，如：人物，怪物，能移动的武器-->
    <actionFightDynamic id="actionFightDynamic" extends="actionFightBase" autoTakeOffWeapon="1" />
    
    <!--静止角色的战斗行为，不会动，不会转向，如静止炮塔-->
    <actionFightDynamic id="actionFightStatic" extends="actionFightBase" allowFollow="0" autoFacing="0" />
    
    
    <!--静止角色的空闲行为,不能移动-->
    <actionIdleStatic id="actionIdleStatic" />
    <actionIdleDynamic id="actionIdleDynamic" />
    <!--巡逻行为，会在一个地点来回走动。-->
    <actionIdlePatrol id="actionIdlePatrol" />
    
    <!--移动行为,包含有寻路,避障功能-->
    <actionRunPath id="actionRun" />
    <!--简单的移动行为，走直线，无寻路，只有简单的避障功能-->
    <actionRunSimple id="actionRunSimple" />
    
    <!--简单的跟随行为-->
    <actionFollowPath id="actionFollow" autoFacing="1" />
    
   
</root>



